#!/bin/sh
#

exec 2>&1

TARGET="$1"
SVNAME="${2:-smartd}"

start() {
	echo "Starting ${SVNAME}..."
	exec /usr/bin/smartd -n
}

reset() {
	case $3 in
		exit)
			echo "Stopping ${SVNAME}..."
			;;
		signal)
			echo "Killing ${SVNAME}..."
			;;
		*)
			echo "Stopping ${SVNAME}..."
			;;
	esac
}

eval ${TARGET} "$@"
