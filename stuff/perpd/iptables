#!/bin/sh
#

exec 2>&1

TARGET="$1"
SVNAME="${2:-iptables}"

start() {
	echo "Starting ${SVNAME}..."
	[ ! -e /etc/iptables/iptables.rules ] && perpctl -b /etc/perp d ${SVNAME}
	iptables-restore /etc/iptables/iptables.rules || perpctl -b /etc/perp d ${SVNAME}
	perpctl -b /etc/perp p ${SVNAME}
}

reset() {
	case $3 in
		exit)
			echo "Stopping ${SVNAME}..."
			/usr/lib/iptables-flush
			;;
		signal)
			echo "Killing ${SVNAME}..."
			;;
		*)
			echo "Stopping ${SVNAME}..."
			;;
	esac
}

eval ${TARGET} "$@"
