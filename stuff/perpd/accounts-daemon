#!/bin/sh
#

exec 2>&1

TARGET="$1"
SVNAME="${2:-accounts-daemon}"

start() {
	echo "Starting ${SVNAME}..."
	if ! perpok -b /etc/perp -u3 dbus; then
		exit 1
	fi

	export GVFS_DISABLE_FUSE=1
	export GIO_USE_VFS=local
	export GVFS_REMOTE_VOLUME_MONITOR_IGNORE=1

	exec /usr/lib/accounts-daemon
}

reset() {
	case $3 in
		exit)
			echo "Stopping ${SVNAME}..."
			;;
		signal)
			echo "Killing ${SVNAME}..."
			;;
		*)
			echo "Stopping ${SVNAME}..."
			;;
	esac
}

eval ${TARGET} "$@"
