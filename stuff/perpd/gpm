#!/bin/sh
#

exec 2>&1

TARGET="$1"
SVNAME="${2:-gpm}"

start() {
	echo "Starting ${SVNAME}..."
	exec /usr/bin/gpm -D -m /dev/input/mice -t imps2
}

reset() {
	case $3 in
		exit)
			echo "Stopping ${SVNAME}..."
			;;
		signal)
			echo "Killing ${SVNAME}..."
			;;
		*)
			echo "Stopping ${SVNAME}..."
			;;
	esac
}

eval ${TARGET} "$@"
