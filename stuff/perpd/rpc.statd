#!/bin/sh
#

exec 2>&1

TARGET="$1"
SVNAME="${2:-rpc.statd}"

start() {
	echo "Starting ${SVNAME}..."
	if ! perpok -u3 rpcbind; then
		exit 1
	fi

	modprobe nfs || perpctl d ${SVNAME}
	exec rpc.statd -F -d -L
}

reset() {
	case $3 in
		exit)
			echo "Stopping ${SVNAME}..."
			;;
		signal)
			echo "Killing ${SVNAME}..."
			;;
		*)
			echo "Stopping ${SVNAME}..."
			;;
	esac
}

eval ${TARGET} "$@"
