#!/bin/sh
#

exec 2>&1

TARGET="$1"
SVNAME="${2:-ipset}"

start() {
	echo "Starting ${SVNAME}..."
	ipset -f /etc/ipset.conf restore || perpctl -b /etc/perp d ${SVNAME}
	perpctl -b /etc/perp p ${SVNAME}
}

reset() {
	case $3 in
		exit)
			echo "Stopping ${SVNAME}..."
			ipset destroy
			;;
		signal)
			echo "Killing ${SVNAME}..."
			;;
		*)
			echo "Stopping ${SVNAME}..."
			;;
	esac
}

eval ${TARGET} "$@"
