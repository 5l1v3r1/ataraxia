#!/usr/bin/bash

NAME="nfsd"
OPTIONS="--syslog"
PIDFILE="/run/$NAME.pid"

case $1 in
	start)
		start-stop-daemon --start --quiet --exec /usr/bin/$NAME -- $OPTIONS 8
		;;
	stop)
		start-stop-daemon --start --quiet --exec /usr/bin/$NAME -- $OPTIONS 0
		;;
	restart|reload)
		$0 stop
		$0 start
		;;
esac
