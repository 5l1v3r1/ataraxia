#!/bin/sh

NAME="dbus"
OPTIONS="--system --nofork --nopidfile"
PIDFILE="/run/$NAME.pid"

case $1 in
	start)
		install -m755 /run/dbus
		start-stop-daemon --start --quiet --pidfile $PIDFILE --exec dbus-daemon -- $OPTIONS
		;;
	stop)
		start-stop-daemon --stop --quiet --oknodo --pidfile $PIDFILE
		;;
	restart|reload)
		$0 stop
		$0 start
		;;
esac
