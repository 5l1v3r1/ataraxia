#!/usr/bin/bash

NAME="tor"
OPTIONS="-f /etc/tor/torrc"
PIDFILE="/run/$NAME.pid"

case $1 in
	start)
		start-stop-daemon --start --quiet --pidfile $PIDFILE --exec /usr/bin/$NAME -- $OPTIONS
		;;
	stop)
		start-stop-daemon --stop --quiet --oknodo --pidfile $PIDFILE
		;;
	restart|reload)
		$0 stop
		$0 start
		;;
esac
