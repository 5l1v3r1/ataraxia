#!/bin/sh

NAME="gpm"
OPTIONS="-m /dev/input/mice -t imps2"
PIDFILE="/run/$NAME.pid"

case $1 in
	start)
		start-stop-daemon --start --quiet --pidfile $PIDFILE --exec $NAME -- $OPTIONS
		;;
	stop)
		start-stop-daemon --stop --quiet --oknodo --pidfile $PIDFILE
		;;
	restart|reload)
		$0 stop
		$0 start
		;;
esac
