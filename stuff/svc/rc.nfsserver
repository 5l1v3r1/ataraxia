#!/usr/bin/bash

NFSD=/proc/fs/nfsd

case $1 in
	start)
		mount -t nfsd nfsd $NFSD
		exportfs -a
		/etc/rc.d/rc.rpc.mountd start
		/etc/rc.d/rc.rpc.nfsd start
		sm-notify
		/etc/rc.d/rc.nfsdcld start
		;;
	stop)
		/etc/rc.d/rc.rpc.nfsd stop
		/etc/rc.d/rc.rpc.mountd stop
		exportfs -au
		/etc/rc.d/rc.nfsdcld stop
		umount $NFSD
		;;
	restart|reload)
		$0 stop
		$0 start
		;;
esac
