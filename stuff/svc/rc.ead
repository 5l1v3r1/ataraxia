#!/bin/sh

NAME="ead"
PIDFILE="/run/$NAME.pid"

case $1 in
	start)
		if [ ! -f "/run/dbus.pid" ]; then
			exit 1
		fi
		start-stop-daemon --start --quiet --pidfile $PIDFILE --exec /usr/lib/iwd/$NAME
		;;
	stop)
		start-stop-daemon --stop --quiet --oknodo --pidfile $PIDFILE
		;;
	restart|reload)
		$0 stop
		$0 start
		;;
esac
