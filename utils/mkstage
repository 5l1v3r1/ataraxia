#!/bin/bash

main() {
	if [ -z "$LINUX" ]; then
		LINUX="linux"
	fi

	STAGE="$BUILD/stage"

	rm -rf "$STAGE"
	mkdir -p "$STAGE"

	packages="base-files linux-api-headers musl tzdata man-pages musl-tools zlib file ncurses readline m4 bison flex bc gmp mpfr mpc binutils gcc \
		ccache bzip2 pkgconf attr acl libcap pcre grep mksh bash libtool gdbm db expat perl nettle libressl ca-certificates \
		autoconf automake xz lzip lz4 zstd libarchive kmod gettext-tiny musl-fts libuargp libelf busybox mandoc dialog pigz libmnl libnftnl \
		libnfnetlink libnetfilter_conntrack libnl libpcap iptables iproute2 kbd libatomic_ops gc libffi libunistring guile make patch \
		vim libcap-ng util-linux hwids eudev $LINUX dpkg libssh2 c-ares libev nghttp2 curl"

	ne -c "$BUILD"/target.config -r "$STAGE" -EWn $packages

	pushd "$STAGE"
		bsdtar -c --zstd -f "$BUILD"/ataraxialinux-$BARCH.tar.zst .
	popd
}
