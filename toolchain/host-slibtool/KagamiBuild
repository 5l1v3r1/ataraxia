name=host-slibtool
version=2f64c91ead80bfb114a4a864c03e9b086be81ee5
release=1
options=('bootstrap')
source=("https://github.com/midipix-project/slibtool/archive/$version.tar.gz")

build() {
	cd "$SRC"/slibtool-$version
	./configure \
		--prefix="$TOOLS" \
		--sbindir="$TOOLS"/bin \
		--compiler="$XTARGET-gcc" \
		--sysroot="$ROOTFS"
	make
	make install

	ln -sf slibtool "$TOOLS"/bin/libtool
}
