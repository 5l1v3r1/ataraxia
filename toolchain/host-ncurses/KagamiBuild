name=host-ncurses
version=6.1+20190609
release=1
options=('bootstrap')
source=("ftp://ftp.invisible-island.net/ncurses/current/ncurses-${version/+/-}.tgz")

build() {
	cd "$SRC"/ncurses-${version/+/-}
	./configure \
		--prefix="$TOOLS" \
		--without-debug
	make -C include
	make -C progs tic

	install -m755 progs/tic "$TOOLS"/bin
}
