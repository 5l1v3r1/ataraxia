name=kmod
version=26
release=1
source=("https://www.kernel.org/pub/linux/utils/kernel/$name/$name-$version.tar.xz")
BOOTSTRAP=yes

build() {
	cd "$SRC"/$name-$version
	./configure \
		--prefix="$TOOLS" \
		--with-xz \
		--with-zlib \
		--disable-manpages
	make
	make install

	for tool in {ins,ls,rm,dep}mod mod{probe,info}; do
		ln -sf kmod "$TOOLS"/bin/$tool
	done

	mkdir -p "$PKG"/var/lib/db
	touch "$PKG"/var/lib/db/installed_${name}
}
