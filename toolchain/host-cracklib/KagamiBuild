name=host-cracklib
version=2.9.7
release=1
source=("https://github.com/cracklib/cracklib/releases/download/v$version/cracklib-$version.tar.gz")
BOOTSTRAP=yes

build() {
	cd "$SRC"/cracklib-$version
	./configure \
		--prefix="$TOOLS" \
		--sbindir="$TOOLS"/bin \
		--without-python
	make
	make install
}
