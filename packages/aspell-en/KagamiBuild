name=aspell-en
version=2018.04.16
release=1
source=("ftp://ftp.gnu.org/gnu/aspell/dict/en/aspell6-en-$version-0.tar.bz2")

build() {
	cd "$SRC"/aspell6-en-$version-0
	./configure
	make
	make DESTDIR="$PKG" install
}
