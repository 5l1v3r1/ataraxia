# Description: Miscellaneous system utilities for Linux 
# URL:         http://git.kernel.org/cgit/utils/util-linux/util-linux.git
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  zlib readline libcap-ng
# Section:     utils

name=util-linux
version=2.34
case $version in
	*.*.*) _v=${version%.*};;
	*.*) _v=$version;;
esac
release=2
options=('bootstrap')
source=("https://www.kernel.org/pub/linux/utils/util-linux/v${_v}/$name-$version.tar.xz")

build() {
	cd "$SRC"/$name-$version
	ADJTIME_PATH=/var/lib/hwclock/adjtime \
	./configure $BUILDFLAGS \
		--prefix=/usr \
		--libdir=/usr/lib \
		--bindir=/usr/bin \
		--sbindir=/usr/bin \
		--localstatedir=/var \
		--with-btrfs \
		--with-readline \
		--without-python \
		--without-systemd \
		--without-systemdsystemunitdir \
		--enable-fs-paths-default=/usr/bin \
		--enable-fdisks \
		--enable-fsck \
		--enable-hwclock \
		--enable-libblkid \
		--enable-libfdisk \
		--enable-libmount \
		--enable-libsmartcols \
		--enable-libuuid \
		--enable-losetup \
		--enable-mount \
		--enable-mountpoint \
		--enable-partx \
		--enable-raw \
		--enable-wall \
		--enable-write \
		--enable-zramctl \
		--disable-all-programs \
		--disable-makeinstall-chown \
		--disable-nls \
		--disable-rpath
	make
	make DESTDIR="$PKG" install

	cd "$PKG"
	mkdir -p var/lib/hwclock

	mv usr/sbin/* usr/bin
	rm -rf bin sbin usr/sbin
}
