# Description: Administration tool for IP sets
# URL:         http://ipset.netfilter.org/
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depneds on:  libmnl

name=ipset
version=7.2
release=1
backup=("etc/ipset.conf")
source=("http://ipset.netfilter.org/$name-$version.tar.bz2")

build() {
	cd "$SRC"/$name-$version
	./configure $BUILDFLAGS \
		--prefix=/usr \
		--sbindir=/usr/bin \
		--with-kmod=no
	make
	make DESTDIR="$PKG" install

	install -Dm644 lib/libipset.pc "$PKG"/usr/lib/pkgconfig/libipset.pc
	install -Dm 644 /dev/null "$PKG"/etc/$pkgname.conf

	for rc in ipset; do
		install -Dm775 "$STUFF"/svc/rc.${rc} "$PKG"/etc/rc.d/rc.$${rc}
	done
}
