# Description: GTK+ Web content engine library
# URL:         https://webkitgtk.org/
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  busybox cmake ninja gtk gtk2 gst-plugins-bad icu libgudev libsecret libsoup libwebp openjpeg ruby sqlite enchant libnotify geoclue
# Section:     gnome

name=webkitgtk
version=2.24.4
release=1
options=('~ccache')
source=("https://webkitgtk.org/releases/$name-$version.tar.xz")

build() {
	cd "$SRC"/$name-$version
	patch -Np1 -i "$STUFF"/webkitgtk/musl.patch

	mkdir -p build
	cd build
	cmake "$SRC"/$name-$version \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=/usr/lib \
		-DLIBEXEC_INSTALL_DIR=/usr/lib \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_SKIP_RPATH=ON \
		-DPORT=GTK \
		-DUSE_WOFF2=OFF \
		-DENABLE_GTKDOC=OFF \
		-DUSE_LIBHYPHEN=OFF \
		-DENABLE_MINIBROWSER=ON \
		-Wno-dev -G Ninja
	ninja
	DESTDIR="$PKG" ninja install
}
