# Description: GTK+ Web content engine library
# URL:         https://webkitgtk.org/
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  busybox cmake ninja gtk gtk2 gst-plugins-bad icu libgudev libsecret libsoup libwebp openjpeg ruby sqlite enchant libnotify geoclue wpebackend-fdo libseccomp bubblewrap xdg-dbus-proxy
# Section:     gnome

name=webkitgtk
version=2.26.1
release=1
options=('~ccache')
source=("https://webkitgtk.org/releases/$name-$version.tar.xz")

build() {
	export CXXFLAGS="$CXXFLAGS -g1"

	cd "$SRC"/$name-$version
	patch -Np1 -i "$STUFF"/webkitgtk/fix-fast-memory-disabled.patch
	patch -Np1 -i "$STUFF"/webkitgtk/musl-fixes.patch
	patch -Np1 -i "$STUFF"/webkitgtk/730b80e691a4b9dd0e9727cfcd9806dfa542397b.patch

	mkdir -p build
	cd build
	cmake "$SRC"/$name-$version \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=/usr/lib \
		-DLIBEXEC_INSTALL_DIR=/usr/lib \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_SKIP_RPATH=ON \
		-DPORT=GTK \
		-DUSE_WOFF2=OFF \
		-DENABLE_GTKDOC=OFF \
		-DUSE_LIBHYPHEN=OFF \
		-DUSE_LD_GOLD=OFF \
		-Wno-dev -G Ninja
	ninja
	DESTDIR="$PKG" ninja install
}
