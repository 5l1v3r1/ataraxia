# Description: Zutils is a collection of utilities able to process any combination of compressed and uncompressed files transparently
# URL:         http://zutils.nongnu.org/zutils.html
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  lzip
# License:     GPL-2.0+
# Group:       Applications/Archiving

name=zutils
version=1.8
release=1
options=('bootstrap')
source=("http://download.savannah.gnu.org/releases/$name/$name-$version.tar.lz")

build() {
	cd "$SRC"/$name-$version

	if [ "$USEBOOTSTRAP" = "yes" ]; then
		./configure \
			CC="$CC" CXX="$CXX" \
			AR="$AR" AS="$AS" LD="$LD" RANLIB="$RANLIB" READELF="$READELF" STRIP="$STRIP"  \
			CXXFLAGS="$CXXFLAGS" \
			--prefix=/usr \
			--bindir=/usr/bin \
			--sysconfdir=/etc \
			--mandir=/usr/share/man \
			--infodir=/usr/share/info
	else
		./configure \
			CXXFLAGS="$CXXFLAGS" \
			--prefix=/usr \
			--bindir=/usr/bin \
			--sysconfdir=/etc \
			--mandir=/usr/share/man \
			--infodir=/usr/share/info
	fi

	make
	make DESTDIR="$PKG" install
}
