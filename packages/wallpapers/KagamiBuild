# Description: Various wallpapaers for Ataraxia Linux
# URL:         https://ataraxialinux.github.io/
# Maintainer:  protonesso, nagakamira at gmail dot com
# Section:     misc

name=wallpapers
version=20190814
release=1

build() {
	mkdir -p "$PKG"/usr/share/backgrounds

	for pics in default.jpg default-white.jpg moon-tux.png moon-tux-light.png pixels.jpg random.png influenza.png calm-darya.png; do
		install -Dm644 "$STUFF"/artwork/$pics "$PKG"/usr/share/backgrounds/$pics
	done
}
