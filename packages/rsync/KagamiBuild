# Description: A file transfer program to keep remote files in sync
# URL:         https://rsync.samba.org/
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  acl perl popt

name=rsync
version=3.1.3
release=1
backup=('etc/rsyncd.conf')
source=("https://rsync.samba.org/ftp/rsync/src/$name-$version.tar.gz")

build() {
	cd "$SRC"/$name-$version
	./configure $BUILDFLAGS \
		--prefix=/usr \
		--without-included-popt \
		--with-included-zlib \
		--disable-debug
	make
	make DESTDIR="$PKG" install

	install -Dm644 "$STUFF"/rsync/rsyncd.conf "$PKG"/etc/rsyncd.conf

	for initd in rsyncd; do
		install -D -m755 "$STUFF"/openrc/${initd}.initd "$PKG"/etc/init.d/$initd
		install -D -m755 "$STUFF"/openrc/${initd}.confd "$PKG"/etc/conf.d/$initd
	done
}
