# Description: A desktop manager for Xfce
# URL:         https://www.xfce.org/
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  intltool libxfce4ui exo libwnck libnotify startup-notification thunar wallpapers
# Section:     xfce

name=xfdesktop
version=4.14.1
release=2
source=("https://archive.xfce.org/src/xfce/$name/${version%.*}/$name-$version.tar.bz2")

build() {
	cd "$SRC"/$name-$version
	./configure $BUILDFLAGS \
		--prefix=/usr \
		--libexecdir=/usr/lib \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--enable-notifications \
		--enable-thunarx \
		--disable-debug
	make
	make DESTDIR="$PKG" install

	install -Dm755 "$STUFF"/xfce4-settings/xfce4-desktop.xml "$PKG"/etc/xdg/xfce4/xfconf/xfce-perchannel-xml/xfce4-desktop.xml
	chmod 644 "$PKG"/etc/xdg/xfce4/xfconf/xfce-perchannel-xml/*.xml
}
