# Description: start and stop system daemon programs
# URL:         https://ataraxialinux.github.io/
# Maintainer:  protonesso, nagakamira at gmail dot com

name=start-stop-daemon
version=228
release=1
options=('bootstrap')

build() {
	mkdir -p "$PKG"/usr/bin

	${CROSS_COMPILE}cc $CFLAGS -static "$STUFF"/start-stop-daemon/main.c -o "$PKG"/usr/bin/start-stop-daemon
}
