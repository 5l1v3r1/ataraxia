# Description: A tool to display dialog boxes from shell scripts
# URL:         https://invisible-island.net/dialog/
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  ncurses
# Priority:    required
# Section:     misc

name=dialog
_distver=1.3
_date=20190728
version="${_distver}+${_date}"
release=1
options=('bootstrap')
source=("https://invisible-mirror.net/archives/$name/$name-${_distver}-${_date}.tgz")

build() {
	cd "$SRC"/$name-${_distver}-${_date}
	./configure $BUILDFLAGS \
		--prefix=/usr \
		--with-ncursesw
	make
	make DESTDIR="$PKG" install
}
