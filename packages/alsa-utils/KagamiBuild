# Description: An alternative implementation of Linux sound support
# URL:         http://www.alsa-project.org/
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  alsa-lib ncurses
# Section:     sound

name=alsa-utils
version=1.1.9
release=2
source=("ftp://ftp.alsa-project.org/pub/utils/$name-$version.tar.bz2")

build() {
	cd "$SRC"/$name-$version
	cp "$STUFF"/config.guess config.guess
	cp "$STUFF"/config.sub config.sub

	./configure $BUILDFLAGS \
		--prefix=/usr \
		--sbindir=/usr/bin \
		--with-udev-rules-dir=/usr/lib/udev/rules.d \
		--disable-alsaconf \
		--disable-alsatest \
		--disable-nls \
		--disable-rst2man \
		--disable-xmlto
	make
	make DESTDIR="$PKG" install

	for rc in alsa; do
		install -Dm775 "$STUFF"/perpd/$rc "$PKG"/etc/perp/$rc/rc.main
		install -Dm775 "$STUFF"/perpd/log "$PKG"/etc/perp/$rc/rc.log
	done
}
