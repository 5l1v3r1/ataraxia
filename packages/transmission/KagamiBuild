# Description: Fast, easy, and free BitTorrent client
# URL:         http://www.transmissionbt.com/
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  intltool curl libevent gtk3
# Section:     net

name=transmission
version=2.94
release=1
source=("https://raw.githubusercontent.com/transmission/transmission-releases/master/$name-$version.tar.xz")

build() {
	export CFLAGS="-I$STUFF/include $CFLAGS"

	cd "$SRC"/$name-$version
	./configure $BUILDFLAGS \
		--prefix=/usr \
		--sysconfdir=/etc \
		--enable-cli \
		--enable-utp
	make
	make DESTDIR="$PKG" install

	for rc in transmission; do
		install -Dm755 "$STUFF"/perpd/$rc "$PKG"/etc/perp/$rc/rc.main
		install -Dm755 "$STUFF"/perpd/log "$PKG"/etc/perp/$rc/rc.log
	done
}
