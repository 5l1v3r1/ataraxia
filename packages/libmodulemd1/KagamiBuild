# Description: C Library for manipulating module metadata files
# URL:         https://github.com/fedora-modularity/libmodulemd
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  meson gobject-introspection pygobject yaml rpm
# Section:     libs

name=libmodulemd1
version=1.8.16
release=1
source=("https://github.com/fedora-modularity/libmodulemd/releases/download/libmodulemd-$version/modulemd-$version.tar.xz")

build() {
	cd "$SRC"/modulemd-$version
	mkdir -p build
	cd build
	ataraxia-meson "$SRC"/modulemd-$version \
		-Ddeveloper_build=false \
		-Dwith_py3_overrides=true \
		-Dwith_py2_overrides=false \
		-Dwith_docs=false
	ninja
	DESTDIR="$PKG" ninja install

	rm "$PKG"/usr/lib/libmodulemd.so
}
