# Description: Virtual filesystem implementation for GIO
# URL:         https://wiki.gnome.org/Projects/gvfs
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  meson dbus glib libusb libsecret libsoup gcr gtk3 libcdio-paranoia libgdata libgudev libimobiledevice libmtp udisks gnome-online-accounts openssh
# Section:     gnome

name=gvfs
version=1.42.1
release=2
source=("http://ftp.gnome.org/pub/gnome/sources/$name/${version%.*}/$name-$version.tar.xz")

build() {
	cd "$SRC"/$name-$version
	mkdir -p build
	cd build
	ataraxia-meson "$SRC"/$name-$version \
		-Dafc=false \
		-Dbluray=false \
		-Ddnssd=false \
		-Dfuse=false \
		-Dgphoto2=false \
		-Dlogind=false \
		-Dman=false \
		-Dnfs=false \
		-Dsmb=false \
		-Dsystemduserunitdir=no \
		-Dtmpfilesdir=no
	ninja
	DESTDIR="$PKG" ninja install
}
