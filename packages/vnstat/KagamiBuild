# Description: A console-based network traffic monitor
# URL:         https://humdi.net/vnstat/
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  sqlite
# License:     GPLv2
# Group:       Applications/Internet

name=vnstat
version=2.3
release=1
backup=('etc/vnstat.conf')
source=("https://humdi.net/vnstat/$name-$version.tar.gz")

build() {
	cd "$SRC"/$name-$version
	patch -Np1 -i "$STUFF"/vnstat/vnstat-2.2-conf.patch
	patch -Np1 -i "$STUFF"/vnstat/vnstat-2.2-run.patch

	./configure $BUILDFLAGS \
		--prefix=/usr \
		--sbindir=/usr/bin \
		--sysconfdir=/etc
	make

	mkdir -p "$PKG"/usr/bin
	make DESTDIR="$PKG" install

	for svc in vnstatd; do
		install -Dm0755 "$STUFF"/svc/$svc-run "$PKG"/etc/service/$svc/run
	done
}
