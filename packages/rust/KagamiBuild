name=rust
version=1.36.0
release=1
options=('~emptydirs')
source=("https://static.rust-lang.org/dist/rust-$version-$RTARGET.tar.gz")

build() {
	cd "$SRC"/rust-$version-$RTARGET
	./install.sh \
		--prefix=/usr \
		--destdir="$PKG" \
		--disable-ldconfig
}
