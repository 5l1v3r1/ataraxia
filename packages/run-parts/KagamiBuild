name=run-parts
version=1.4.8.8
release=1
options=('bootstrap')

build() {
	mkdir -p "$PKG"/usr/bin

	${CROSS_COMPILE}cc $CFLAGS "$STUFF"/run-parts/run-parts.c -o "$PKG"/usr/bin/run-parts
}
