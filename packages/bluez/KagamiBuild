# Description: Daemons for the bluetooth protocol stack
# URL:         http://www.bluez.org/
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  dbus glib libical alsa-lib
# Section:     admin

name=bluez
version=5.52
release=1
backup=('etc/bluetooth/main.conf')
source=("https://www.kernel.org/pub/linux/bluetooth/$name-$version.tar.xz")

build() {
	cd "$SRC"/$name-$version
	patch -Np1 -i "$STUFF"/bluez/musl.patch

	./configure $BUILDFLAGS \
		--prefix=/usr \
		--libexecdir=/usr/lib \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--mandir=/usr/share/man \
		--with-dbusconfdir=/usr/share \
		--enable-experimental \
		--enable-deprecated \
		--enable-library \
		--enable-mesh \
		--disable-systemd
	make
	make DESTDIR="$PKG" install

	install -Dm644 src/main.conf "$PKG"/etc/bluetooth/main.conf

	for rc in bluetoothd; do
		install -Dm755 "$STUFF"/perpd/$rc "$PKG"/etc/perp/$rc/rc.main
		install -Dm755 "$STUFF"/perpd/log "$PKG"/etc/perp/$rc/rc.log
	done
}
