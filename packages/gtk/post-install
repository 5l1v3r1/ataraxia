#!/bin/sh

if [ "$1" = triggered ]; then
	/usr/bin/gtk-query-immodules-3.0 --update-cache
	if [ -d "/usr/share/icons/hicolor" ]; then
		/usr/bin/gtk-update-icon-cache -t -f --include-image-data /usr/share/icons/hicolor
	fi
else
	/usr/bin/gtk-query-immodules-3.0 --update-cache
	if [ -d "/usr/share/icons/hicolor" ]; then
		/usr/bin/gtk-update-icon-cache -t -f --include-image-data /usr/share/icons/hicolor
	fi
fi
