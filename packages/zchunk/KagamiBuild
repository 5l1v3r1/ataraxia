# Description: A file format that allows easy deltas while maintaining good compression
# URL:         https://github.com/zchunk/zchunk
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  meson zstd curl
# Section:     libs

name=zchunk
version=1.1.5
release=1
source=("https://github.com/zchunk/zchunk/archive/$version.tar.gz")

build() {
	cd "$SRC"/$name-$version
	mkdir -p build
	cd build
	ataraxia-meson "$SRC"/$name-$version
	ninja
	DESTDIR="$PKG" ninja install
}
