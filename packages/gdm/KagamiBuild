# Description: Display manager and login screen
# URL:         https://wiki.gnome.org/Projects/GDM
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  pam accountsservice gtk3 iso-codes itstool libcanberra consolekit2
# Section:     gnome

name=gdm
version=3.34.1
release=9
backup=('etc/gdm/custom.conf'
	'etc/gdm/PostSession/Default'
	'etc/gdm/PreSession/Default'
	'etc/gdm/Xsession'
	'etc/pam.d/gdm-autologin'
	'etc/pam.d/gdm-fingerprint'
	'etc/pam.d/gdm-launch-environment'
	'etc/pam.d/gdm-password'
	'etc/pam.d/gdm-smartcard')
source=("http://ftp.gnome.org/pub/gnome/sources/$name/${version%.*}/$name-$version.tar.xz")

build() {
	cd "$SRC"/$name-$version
	patch -Np1 -i "$STUFF"/gdm/gdm.patch
	autoreconf -vif

	./configure $BUILDFLAGS \
		--prefix=/usr \
		--libexecdir=/usr/lib \
		--sbindir=/usr/bin \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--with-dbus-sys=/usr/share/dbus-1/system.d \
		--with-run-dir=/run \
		--with-default-pam-config=exherbo \
		--with-default-path=/usr/local/games:/usr/local/bin:/usr/local/sbin:/usr/games:/usr/bin \
		--with-console-kit \
		--with-consolekit-directory=/usr/lib/consolekit \
		--with-initial-vt=7 \
		--without-plymouth \
		--without-systemd \
		--with-systemdsystemunitdir=no \
		--enable-ipv6 \
		--enable-gdm-xsession \
		--disable-user-display-server \
		--disable-schemas-compile \
		--disable-systemd-journal

	sed -i 's/ -shared / -Wl,--as-needed\0/g' libtool
	make
	make DESTDIR="$PKG" install

	rm -rf "$PKG"/var/{cache,log,run}
	rm -rf "$PKG"/run

	for rc in gdm; do
		install -Dm755 "$STUFF"/perpd/$rc "$PKG"/etc/perp/$rc/rc.main
		install -Dm755 "$STUFF"/perpd/log "$PKG"/etc/perp/$rc/rc.log
	done
}
