# Description: Freedesktop.org Shared MIME Info
# URL:         https://www.freedesktop.org/wiki/Specifications/shared-mime-info-spec/
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  intltool glib libxml2 itstool
# Section:     x11

name=shared-mime-info
version=1.15
oof=aee9ae9646cbef724bbb1bd2ba146556
release=1
source=("https://gitlab.freedesktop.org/xdg/shared-mime-info/uploads/$oof/$name-$version.tar.xz"
	"$name.trigger")

build() {
	cd "$SRC"/$name-$version
	./configure $BUILDFLAGS \
		--prefix=/usr
	make
	make DESTDIR="$PKG" install

	install -Dm0644 "$SRC"/$name.trigger "$PKG"/var/lib/neko-triggers/$name
}
