#!/bin/sh

if [ "$1" = "pre-install" ]; then
	getent group lightdm || groupadd -r lightdm 2>/dev/null
	getent passwd lightdm || useradd -c "LightDM Daemon" -g lightdm -r -d /var/lib/lightdm -s /usr/bin/nologin lightdm 2>/dev/null
	passwd -l lightdm 2>/dev/null
elif [ "$1" = "post-install" ]; then
	for dirs in /var/lib/lightdm /var/lib/lightdm-data /var/cache/lightdm; do
		install -dm755 -o lightdm -g lightdm $dirs
	done

	install -dm770 -o lightdm -g lightdm /var/log/lightdm
fi
