# Description: Linux application sandboxing and distribution framework
# URL:         https://flatpak.org/
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  intltool gobject-introspection appstream-glib bubblewrap json-glib libseccomp libxau ostree polkit xdg-dbus-proxy
# Section:     admin

name=flatpak
version=1.6.0
release=1
source=("https://github.com/flatpak/flatpak/releases/download/$version/$name-$version.tar.xz")

build() {
	cd "$SRC"/$name-$version
	./configure $BUILDFLAGS \
		--prefix=/usr \
		--libexecdir=/usr/lib \
		--sbindir=/usr/bin \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--with-dbus-config-dir=/usr/share/dbus-1/system.d \
		--with-profile-dir=/etc/profile.d \
		--with-system-bubblewrap \
		--with-system-dbus-proxy \
		--with-system-helper-user=flatpak \
		--disable-gtk-doc \

	sed -i 's/ -shared / -Wl,-Os,--as-needed\0/g' libtool
	make
	make DESTDIR="$PKG" install
}
