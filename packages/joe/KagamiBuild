# Description: Joe's own editor
# URL:         https://joe-editor.sourceforge.io/
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  ncurses
# Section:     editors

name=joe
version=4.6
release=1
backup=('etc/joe/ftyperc'
	'etc/joe/jicerc.ru'
	'etc/joe/jmacsrc'
        'etc/joe/joerc'
	'etc/joe/jpicorc'
	'etc/joe/jstarrc'
	'etc/joe/rjoerc')
source=("https://downloads.sourceforge.net/joe-editor/$name-$version.tar.xgz")

build() {
	cd "$SRC"/$name-$version
	./configure $BUILDFLAGS \
		--prefix=/usr \
		--sysconfdir=/etc \	
		--mandir=/usr/share/man
	make
	make DESTDIR="$PKG" install
}
