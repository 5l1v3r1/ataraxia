# Description: ISO AAC audio decoder
# URL:         http://faac.sourceforge.net/
# Maintainer:  protonesso, nagakamira at gmail dot com
# Section:     audio

name=faad2
version=2.8.8
release=1
options=('~makeflags')
source=("https://downloads.sourceforge.net/sourceforge/faac/$name-$version.tar.gz")

build() {
	cd "$SRC"/$name-$version
	./configure $BUILDFLAGS \
		--prefix=/usr
	make
	make DESTDIR="$PKG" install
}
