# Description: JavaScript interpreter and libraries - Version 52
# URL:         https://developer.mozilla.org/en-US/docs/Mozilla/Projects/SpiderMonkey
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  autoconf2.13 python2 yasm zlib readline libffi nspr icu

name=js52
version=52.9.0
release=1
source=("https://archive.mozilla.org/pub/firefox/releases/${version}esr/source/firefox-${version}esr.source.tar.xz")

build() {
	export CFLAGS="$CFLAGS -fno-delete-null-pointer-checks -fno-strict-aliasing -fno-tree-vrp -Wno-format-overflow"
	export CXXFLAGS="$CXXFLAGS -fno-delete-null-pointer-checks -fno-strict-aliasing -fno-tree-vrp -Wno-format-overflow"
	export SHELL=/bin/bash
	export PYTHON=/usr/bin/python2

	cd "$SRC"
	mkdir build
	cd build

	"$SRC"/firefox-${version}esr/js/src/configure  \
		--prefix=/usr \
		--with-intl-api \
		--with-system-icu \
		--with-system-nspr \
		--with-system-zlib \
		--enable-ctypes \
		--enable-pie \
		--enable-readline \
		--enable-release \
		--enable-shared-js \
		--enable-system-ffi \
		--disable-debug \
		--disable-debug-symbols \
		--disable-jemalloc \
		--disable-optimize \
		--disable-strip \
		--disable-tests \
		--host=$XTARGET \
		--target=$XTARGET
	make
	make DESTDIR="$PKG" install

	rm "$PKG"/usr/lib/libjs_static.ajs
}
