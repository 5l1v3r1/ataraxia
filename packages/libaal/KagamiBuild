# Description: Reiser4 filesystem support library
# URL:         http://sourceforge.net/projects/reiser4/
# Maintainer:  protonesso, nagakamira at gmail dot com
# Priority:    required
# Section:     libs

name=libaal
version=1.0.7
release=1
options=('bootstrap')
source=("http://sourceforge.net/projects/reiser4/files/reiser4-utils/$name/$name-$version.tar.gz")

build() {
	cd "$SRC"/$name-$version
	./configure $BUILDFLAGS \
		--prefix=/usr \
		--disable-shared

	if [ "$CROSS" = "yes" ]; then
		$ORIGMAKE
		$ORIGMAKE DESTDIR="$PKG" install
	else
		make
		make DESTDIR="$PKG" install
	fi
}
