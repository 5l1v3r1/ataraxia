# Description: Internet Wireless Daemon
# URL:         https://git.kernel.org/cgit/network/wireless/iwd.git/
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  readline dbus
# Section:     net

name=iwd
version=1.0
release=1
source=("https://www.kernel.org/pub/linux/network/wireless/$name-$version.tar.xz")

build() {
	cd "$SRC"/$name-$version
	./configure $BUILDFLAGS \
		--prefix=/usr \
		--libexecdir=/usr/lib/iwd \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--enable-sim-hardcoded \
		--enable-tools \
		--enable-wired \
		--disable-docs \
		--disable-systemd-service
	make
	make DESTDIR="$PKG" install

	for rc in iwd ead; do
		install -Dm755 "$STUFF"/perpd/$rc "$PKG"/etc/perp/$rc/rc.main
		install -Dm755 "$STUFF"/perpd/log "$PKG"/etc/perp/$rc/rc.log
	done
}
