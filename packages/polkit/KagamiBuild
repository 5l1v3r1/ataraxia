# Description: Application development toolkit for controlling system-wide privileges
# URL:         https://www.freedesktop.org/wiki/Software/polkit/
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  pam intltool gobject-introspection spidermonkey
# Section:     utils

name=polkit
version=0.116
release=1
source=("https://www.freedesktop.org/software/$name/releases/$name-$version.tar.gz")

build() {
	cd "$SRC"/$name-$version
	patch -Np1 -i "$STUFF"/polkit/make-innetgr-optional.patch
	autoreconf -fi

	sed -e 's,/sys/fs/cgroup/systemd/,/sys/fs/cgroup,g' -i configure

	./configure $BUILDFLAGS \
		--prefix=/usr \
		--libexecdir=/usr/lib \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--with-os-type=Ataraxia \
		--disable-libelogind \
		--disable-libsystemd-login \
		--disable-man-pages \
		--disable-nls \
		--disable-static

	sed -i 's/ -shared / -Wl,-Os,--as-needed\0/g' libtool
	make
	make DESTDIR="$PKG" dbusconfdir=/usr/share/dbus-1/system.d rulesdir=/usr/share/polkit-1/rules.d install

	install -Dm644 "$STUFF"/pam.d/polkit-1 "$PKG"/etc/pam.d/polkit-1
}
