# Description: Application development toolkit for controlling system-wide privileges
# URL:         https://www.freedesktop.org/wiki/Software/polkit/
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  intltool gobject-introspection spidermonkey
# Section:     utils

name=polkit
version=0.116
release=5
source=("https://www.freedesktop.org/software/$name/releases/$name-$version.tar.gz")

build() {
	cd "$SRC"/$name-$version
	patch -Np1 -i "$STUFF"/polkit/make-innetgr-optional.patch
	autoreconf -fi

	sed -e 's,/sys/fs/cgroup/systemd/,/sys/fs/cgroup,g' -i configure

	./configure $BUILDFLAGS \
		--prefix=/usr \
		--libexecdir=/usr/lib \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--with-authfw=shadow \
		--with-os-type=ataraxia \
		--disable-libelogind \
		--disable-libsystemd-login \
		--disable-man-pages \
		--disable-nls \
		--disable-static
	make
	make DESTDIR="$PKG" install

	chmod 4755 "$PKG"/usr/lib/polkit-1/polkit-agent-helper-1 "$PKG"/usr/bin/pkexec

	for rc in polkitd; do
		install -Dm755 "$STUFF"/perpd/$rc "$PKG"/etc/perp/$rc/rc.main
		install -Dm755 "$STUFF"/peprd/log "$PKG"/etc/perp/$rc/rc.log
	done
}
