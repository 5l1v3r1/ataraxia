# Description: Application development toolkit for controlling system-wide privileges
# URL:         https://www.freedesktop.org/wiki/Software/polkit/
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  intltool glib gobject-introspection spidermonkey
# Section:     utils

name=polkit
version=0.116
release=4
source=("https://www.freedesktop.org/software/$name/releases/$name-$version.tar.gz")

build() {
	cd "$SRC"/$name-$version
	patch -Np1 -i "$STUFF"/polkit/make-innetgr-optional.patch
	autoreconf -vif

	sed -e 's,/sys/fs/cgroup/systemd/,/sys/fs/cgroup,g' -i configure

	./configure $BUILDFLAGS \
		--prefix=/usr \
		--libexecdir=/usr/lib \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--with-authfw=shadow \
		--disable-libelogind \
		--disable-libsystemd-login \
		--disable-man-pages \
		--disable-nls \
		--disable-static
	make
	make DESTDIR="$PKG" install

	for svc in polkitd; do
		install -Dm0755 "$STUFF"/svc/$svc-run "$PKG"/etc/service/$svc/run
	done
}
