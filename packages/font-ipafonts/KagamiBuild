# Description: Japanese outline fonts by Information-technology Promotion Agency, Japan (IPA)
# URL:         https://ipafont.ipa.go.jp/
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  font-util
# Section:     fonts

name=font-ipafont
version=00303
release=1
source=("https://ipafont.ipa.go.jp/old/ipafont/IPAfont${version}.php")

build() {
	cd "$SRC"
	bsdtar -xf IPAfont${version}.php

	cd "$SRC"/IPAfont${version}
	mkdir -p "$PKG"/usr/share/fonts/OTF/
	install -m644 *.ttf "$PKG"/usr/share/fonts/OTF/
}
