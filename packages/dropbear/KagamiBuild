# Description: Lightweight SSH server
# URL:         https://matt.ucc.asn.au/dropbear/dropbear.html
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  zlib

name=dropbear
version=2019.78
release=1
source=("https://matt.ucc.asn.au/$name/releases/$name-$version.tar.bz2")

build() {
	cd "$SRC"/$name-$version
	./configure $BUILDFLAGS \
		--prefix=/usr \
		--bindir=/usr/bin \
		--sbindir=/usr/bin
	make PROGRAMS='dbclient dropbear dropbearconvert dropbearkey'
	make DESTDIR="$PKG" install

	mkdir -p "$PKG"/var/log/dropbear

	for initd in dropbear; do
		install -D -m755 "$STUFF"/openrc/${initd}.initd "$PKG"/etc/init.d/$initd
		install -D -m755 "$STUFF"/openrc/${initd}.confd "$PKG"/etc/conf.d/$initd
	done
}
