# Description: rpcopenrc protocol definitions
# URL:         https://github.com/thkukuk/rpcopenrc-proto
# Maintainer:  protonesso, nagakamira at gmail dot com

name=rpcopenrc-proto
version=1.4
release=1
source=("https://github.com/thkukuk/rpcopenrc-proto/archive/v$version.tar.gz")

build() {
	cd "$SRC"/$name-$version
	autoreconf -fi

	./configure $BUILDFLAGS \
		--prefix=/usr
	make
	make DESTDIR="$PKG" install
}
