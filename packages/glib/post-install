#!/bin/sh

if [ "$1" = triggered ]; then
	if [ -d '/usr/lib/gio/modules' ]; then
		/usr/bin/gio-querymodules /usr/lib/gio/modules
	fi
	if [ -d '/usr/share/glib-2.0/schemas' ]; then
		/usr/bin/glib-compile-schemas /usr/share/glib-2.0/schemas
	fi
else
	if [ -d '/usr/lib/gio/modules' ]; then
		/usr/bin/gio-querymodules /usr/lib/gio/modules
	fi
	if [ -d '/usr/share/glib-2.0/schemas' ]; then
		/usr/bin/glib-compile-schemas /usr/share/glib-2.0/schemas
	fi
fi
